<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#dddddd"
    tools:context=".ui.">>


    <TextView
        android:id="@+id/ap_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:background="#A4C739"
        android:textSize="20sp"
        android:text="@string/title_activity_outsourceing_material_and_shipment_picking"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#ffffff" />

    <Button
        android:id="@+id/button_return"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/ap_title"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:background="@drawable/custom_button"
        android:text="@string/button_return"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/label_merge_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/ap_title"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="39dp"
        android:layout_marginRight="5dp"
        android:text="@string/label_merge_number"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#000000" />

    <TextView
        android:id="@+id/textview_merge_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/ap_title"
        android:layout_toRightOf="@+id/label_merge_number"
        android:layout_marginTop="39dp"
        android:paddingLeft="5dp"
        android:text="@string/label_merge_number"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/blue" />


    <TextView
        android:id="@+id/label_ban_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/textview_ban_num"
        android:layout_alignParentLeft="true"
        android:paddingLeft="5dp"
        android:text="@string/ban_num"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#000000" />

    <TextView
        android:id="@+id/textview_ban_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/label_merge_number"
        android:layout_toRightOf="@+id/label_ban_num"
        android:paddingLeft="5dp"
        android:text="@string/ban_num"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/blue" />
    <TextView
        android:id="@+id/label_serial_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/textview_ban_num"
        android:layout_toRightOf="@+id/textview_ban_num"
        android:paddingLeft="20dp"
        android:text="@string/label_serial_number"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#000000" />

    <TextView
        android:id="@+id/textview_carton_qty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/label_merge_number"
        android:layout_toRightOf="@+id/label_serial_number"
        android:paddingLeft="5dp"
        android:text="@string/label_serial_number"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/blue" />

    <TextView
        android:id="@+id/label_part_no"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/label_ban_num"
        android:layout_alignParentLeft="true"
        android:paddingLeft="5dp"
        android:text="@string/label_part_no2"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#ff0000"
        android:textSize="18sp"/>

    <TextView
        android:id="@+id/label_reel_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/label_part_no"
        android:layout_alignBottom="@+id/label_part_no"
        android:layout_toRightOf="@+id/label_part_no"
        android:paddingLeft="20dp"
        android:text="@string/label_reel_id2"
        android:layout_alignLeft="@+id/label_serial_number"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#ff0000"
        android:textSize="18sp"/>

    <Button
        android:id="@+id/button_stock_in"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/button_return"
        android:layout_alignBottom="@+id/label_reel_id"
        android:background="@drawable/custom_button"
        android:paddingLeft="5dip"
        android:paddingTop="10dip"
        android:paddingRight="5dip"
        android:paddingBottom="10dip"
        android:text="@string/button_complete"
        android:textColor="#ffffff" />

    <LinearLayout
        android:id="@+id/layout_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/label_reel_id"
        android:layout_marginTop="9dp"
        android:background="#FFFFFF"
        android:orientation="vertical">

        <TextView
            android:id="@+id/label_QR_Code"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/label_reel_id"
            android:paddingLeft="5dip"
            android:text="@string/label_input_qrcode"
            android:textColor="#000000"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/edittext_qr_code"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@+id/label_QR_Code"
            android:background="@color/grey"
            android:clickable="false"
            android:ems="30"
            android:gravity="center"
            android:inputType="text"
            android:lines="3"
            android:textColor="@color/blue"
            android:textSize="14sp" />

    </LinearLayout>





    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/layout_input"
        android:background="#FFFFFF"

        android:scrollbars="vertical">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="fill_parent">

            <ListView
                android:id="@+id/list_item"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_above="@+id/label_status"
                android:layout_alignParentLeft="true"
                android:background="#FFFFFF"
                android:choiceMode="singleChoice"
                android:divider="@null"
                android:dividerHeight="4dp"
                android:orientation="vertical"></ListView>
        </LinearLayout>
    </ScrollView>


    <TextView
        android:id="@+id/label_status"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:background="#A4C739"
        android:clickable="true"
        android:gravity="center"
        android:textAppearance="?android:attr/textAppearanceLarge" />


</RelativeLayout>