<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="4dp">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/label_out_subinventory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/label_out_subinventory"
            android:textAppearance="?android:attr/textAppearance"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/txt_out_subinventory"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginLeft="4dp"
            android:layout_weight="1"
            android:textAppearance="?android:attr/textAppearance"
            android:textColor="@color/blue" />

        <TextView
            android:id="@+id/label_out_locator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/label_out_locator"
            android:textAppearance="?android:attr/textAppearance"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/txt_out_locator"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="4dp"
            android:textAppearance="?android:attr/textAppearance"
            android:textColor="@color/blue"
            android:layout_marginStart="4dp" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/label_detail_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/label_detail_status"
            android:textAppearance="?android:attr/textAppearance"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/txt_detail_status"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginLeft="4dp"
            android:layout_weight="1"
            android:textAppearance="?android:attr/textAppearance"
            android:textColor="@color/blue" />

        <TextView
            android:id="@+id/label_warehouse_clerk"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/label_warehouse_clerk"
            android:textAppearance="?android:attr/textAppearance"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/txt_warehouse_clerk"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginLeft="4dp"
            android:layout_weight="1"
            android:textAppearance="?android:attr/textAppearance"
            android:textColor="@color/blue" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/label_item_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/label_item_number"
            android:textAppearance="?android:attr/textAppearance"
            android:textColor="#000000" />
			
        <TextView
            android:id="@+id/txt_item_number"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginLeft="4dp"
            android:layout_weight="1"
            android:textAppearance="?android:attr/textAppearance"
            android:textColor="@color/blue" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/label_item_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/label_item_description"
            android:textAppearance="?android:attr/textAppearance"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/txt_item_description"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginLeft="4dp"
            android:layout_weight="1"
            android:singleLine="true"
            android:textAppearance="?android:attr/textAppearance"
            android:textColor="#000000" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/label_due_number"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/label_due_number"
            android:textAppearance="?android:attr/textAppearance"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/txt_due_number"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginLeft="4dp"
            android:layout_weight="1"
            android:textAppearance="?android:attr/textAppearance"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/label_number_of_credited"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/label_number_of_credited"
            android:textAppearance="?android:attr/textAppearance"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/txt_number_of_credited"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="4dp"
            android:textAppearance="?android:attr/textAppearance"
            android:textColor="@color/blue"
            android:layout_marginStart="4dp" />

        <TextView
            android:id="@+id/label_number_of_uncredited"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/label_number_of_uncredited"
            android:textAppearance="?android:attr/textAppearance"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/txt_number_of_uncredited"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginLeft="4dp"
            android:layout_weight="1"
            android:textAppearance="?android:attr/textAppearance"
            android:textColor="@color/red" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/label_onhand"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/label_onhand"
            android:textAppearance="?android:attr/textAppearance"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/txt_onhand"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginLeft="4dp"
            android:layout_weight="1"
            android:textAppearance="?android:attr/textAppearance"
            android:textColor="@color/blue" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/locator_detail" />

</LinearLayout>