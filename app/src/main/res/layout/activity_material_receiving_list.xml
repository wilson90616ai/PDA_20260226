<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#dddddd"
    tools:context=".ui.MaterialReceivingListActivity">

    <TextView
        android:id="@+id/ap_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:background="#A4C739"
        android:text="@string/label_material_receiving_list"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#ffffff" />

    <Button
        android:id="@+id/button_return"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/label_vendor_name"
        android:layout_alignBottom="@+id/ap_title"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:background="@drawable/custom_button"
        android:text="@string/button_return"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <EditText
        android:id="@+id/input_search_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ap_title"
        android:ems="30"
        android:inputType="text"
        android:lines="1"
        android:textSize="16sp"
        android:textColorHint="@color/darkgrey"
        android:hint="@string/hint_receiving_list"
        android:textColor="@color/black" />


    <TextView
        android:id="@+id/label_vendor_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/input_search_text"
        android:layout_alignParentLeft="true"
        android:paddingLeft="4dp"
        android:text="@string/label_vendor_name"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#000000" />

    <TextView
        android:id="@+id/label_rec_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/input_search_text"
        android:layout_marginLeft="4dp"
        android:layout_toRightOf="@+id/label_vendor_name"
        android:text="@string/label_rec_id"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/blue" />

    <TextView
        android:id="@+id/txt_vendor_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/label_vendor_name"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="4dp"
        android:paddingLeft="4dp"
        android:text="@string/label_vendor_info"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#000000" />

    <TextView
        android:id="@+id/label_vendor_site_code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_vendor_info"
        android:layout_alignParentLeft="true"
        android:paddingLeft="4dp"
        android:text="@string/label_vendor_site"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#000000" />

    <TextView
        android:id="@+id/org_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/input_search_text"
        android:layout_marginLeft="99dp"
        android:layout_marginTop="52dp"
        android:layout_toRightOf="@+id/label_vendor_site_code"
        android:text=""
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#DF0606" />

    <Button
        android:id="@+id/button_receiving"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/input_search_text"
        android:layout_alignRight="@+id/input_search_text"
        android:layout_marginStart="4dp"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginBottom="4dp"
        android:background="@drawable/custom_button_purple"
        android:paddingLeft="5dip"
        android:paddingTop="10dip"
        android:paddingRight="5dip"
        android:paddingBottom="10dip"
        android:text="@string/receiving"
        android:textColor="#ffffff" />

    <ListView
        android:id="@+id/list_item"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/label_status"
        android:layout_below="@+id/label_vendor_site_code"
        android:layout_alignParentLeft="true"
        android:background="#FFFFFF"
        android:choiceMode="singleChoice"
        android:divider="@null"
        android:dividerHeight="8dp"
        android:orientation="vertical" />

    <TextView
        android:id="@+id/label_status"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:background="#A4C739"
        android:clickable="true"
        android:gravity="center"
        android:textAppearance="?android:attr/textAppearanceLarge" />

</RelativeLayout>