<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".ui.OutsourcingPackingMethodActivity">

    <TextView
        android:id="@+id/ap_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:background="#A4C739"
        android:textSize="20sp"
        android:text="@string/title_activity_outsourceing_material_and_shipment_picking"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#ffffff" />

    <Button
        android:id="@+id/button_return"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/ap_title"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:background="@drawable/custom_button"
        android:text="@string/button_return"
        android:textAppearance="?android:attr/textAppearanceLarge" />


    <LinearLayout
        android:id="@+id/layout_package"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ap_title"
        android:layout_marginTop="2dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:text="@string/label_picking_package"
            android:textSize="24sp"/>

        <RadioGroup
            android:layout_width="match_parent"
            android:id="@+id/radio_group"
            android:layout_height="90dp">

            <RadioButton
                android:id="@+id/radio_PLT"
                style="@style/RadioButtonWh"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/label_pallet_check"
                android:textColor="#000000"
                android:textSize="18sp" />

            <RadioButton
                android:id="@+id/radio_Box"
                style="@style/RadioButtonWh"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/label_box_check"
                android:textColor="#000000"
                android:textSize="18sp" />
        </RadioGroup>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_pallet"
        android:layout_width="match_parent"
        android:layout_height="104dp"
        android:layout_below="@+id/layout_package"
        android:layout_marginTop="9dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/label_pallet_no"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/label_input_pallet_no"
            android:textColor="#000000"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/edittext_pallet_no"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginTop="4dp"
            android:background="@color/grey"
            android:clickable="false"
            android:ems="30"
            android:gravity="center"
            android:inputType="text"
            android:lines="1"
            android:maxLength="12"
            android:textColor="@color/blue"
            android:textSize="16sp" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/layout_box"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layout_pallet"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:text="@string/import_cn2"
            android:textSize="18sp" />
        <EditText
            android:id="@+id/edittext_C_no"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginTop="4dp"
            android:background="@color/grey"
            android:clickable="false"
            android:ems="30"
            android:gravity="center"
            android:inputType="text"
            android:lines="1"
            android:maxLength="12"
            android:textColor="@color/blue"
            android:textSize="16sp" />
    </LinearLayout>

    <Button
        android:id="@+id/button_confirm"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/button_cancel"
        android:layout_alignBottom="@+id/button_cancel"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="15dp"
        android:background="@drawable/custom_button"
        android:paddingLeft="5dip"
        android:paddingTop="10dip"
        android:paddingRight="5dip"
        android:paddingBottom="10dip"
        android:text="@string/button_confirm2"
        android:textColor="#ffffff" />

    <Button
        android:id="@+id/button_cancel"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/label_status"
        android:layout_alignParentRight="true"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/custom_button"
        android:paddingLeft="5dip"
        android:paddingTop="10dip"
        android:paddingRight="5dip"
        android:paddingBottom="10dip"
        android:text="@string/button_cancel2"
        android:textColor="#ffffff" />

    <TextView
        android:id="@+id/label_status"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:background="#A4C739"
        android:clickable="true"
        android:gravity="center"
        android:textAppearance="?android:attr/textAppearanceLarge" />


</RelativeLayout>