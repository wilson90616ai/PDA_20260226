<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#dddddd"
    tools:context=".ui.ConnectionSettingActivity">

    <TextView
        android:id="@+id/label_connection_setting"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:gravity="left"
        android:paddingLeft="30dip"
        android:paddingTop="50dip"
        android:paddingBottom="30dip"
        android:text="@string/label_connection_setting"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#000000"
        android:textSize="32sp" />

    <TextView
        android:id="@+id/label_server"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/label_connection_setting"
        android:layout_alignParentLeft="true"
        android:paddingLeft="30dip"
        android:paddingTop="3dip"
        android:paddingRight="5dip"
        android:paddingBottom="3dip"
        android:text="@string/label_server"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#000000" />

    <Spinner
        android:id="@+id/spinneServer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/button_cancel_setting"
        android:layout_alignBottom="@+id/label_server"
        android:layout_toRightOf="@+id/label_server"
        android:spinnerMode="dropdown" />

    <TextView
        android:id="@+id/label_server_ip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/label_server"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="16dp"
        android:paddingLeft="30dip"
        android:paddingTop="3dip"
        android:paddingRight="5dip"
        android:paddingBottom="3dip"
        android:text="@string/label_server_ip"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#000000" />


    <EditText
        android:id="@+id/input_server_ip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/spinneServer"
        android:layout_alignRight="@+id/button_cancel_setting"
        android:layout_alignBottom="@+id/label_server_ip"
        android:layout_toRightOf="@+id/label_server_ip"
        android:ems="30"
        android:inputType="numberDecimal|text"
        android:lines="1"
        android:textColor="#000000">

        <requestFocus />
    </EditText>

    <TextView
        android:id="@+id/label_server_port"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/label_server_ip"
        android:layout_marginTop="16dp"
        android:paddingLeft="30dip"
        android:paddingTop="3dip"
        android:paddingRight="5dip"
        android:paddingBottom="3dip"
        android:text="@string/label_server_port"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#000000" />

    <EditText
        android:id="@+id/input_server_port"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/spinneServer"
        android:layout_alignRight="@+id/button_cancel_setting"
        android:layout_alignBottom="@+id/label_server_port"
        android:ems="30"
        android:inputType="numberDecimal"
        android:lines="1"
        android:textColor="#000000" />

    <TextView
        android:id="@+id/label_connection_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:background="#ff0000"
        android:clickable="true"
        android:gravity="center_horizontal"
        android:text="@string/label_empty"
        android:textColor="#ffffff"
        android:textSize="20sp" />

    <Button
        android:id="@+id/button_connect_test"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button_confirm_setting"
        android:layout_alignLeft="@+id/button_confirm_setting"
        android:layout_alignRight="@+id/button_cancel_setting"
        android:layout_marginTop="20dp"
        android:background="@drawable/custom_button"
        android:paddingLeft="5dip"
        android:paddingTop="10dip"
        android:paddingRight="5dip"
        android:paddingBottom="10dip"
        android:text="@string/label_connect_test"
        android:textColor="#ffffff" />

    <Button
        android:id="@+id/button_cancel_setting"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/input_server_port"
        android:layout_alignParentRight="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="31dp"
        android:layout_marginRight="30dp"
        android:background="@drawable/custom_button"
        android:paddingLeft="5dip"
        android:paddingTop="10dip"
        android:paddingRight="5dip"
        android:paddingBottom="10dip"
        android:text="@string/button_cancel_setting"
        android:textColor="#ffffff" />

    <Button
        android:id="@+id/button_confirm_setting"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/button_cancel_setting"
        android:layout_alignBottom="@+id/button_cancel_setting"
        android:layout_alignParentLeft="true"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/custom_button"
        android:paddingLeft="5dip"
        android:paddingTop="10dip"
        android:paddingRight="5dip"
        android:paddingBottom="10dip"
        android:text="@string/button_confirm_setting"
        android:textColor="#ffffff" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button_connect_test"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="130dp"
        android:layout_marginEnd="103dp"
        android:layout_marginRight="103dp"

        android:text="Senao:10.0.200.172\nBLD:10.0.208.172"
        android:textColor="@color/black"
        android:textSize="25dp" />

</RelativeLayout>