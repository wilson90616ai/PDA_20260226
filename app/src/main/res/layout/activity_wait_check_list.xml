<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:background="#dddddd"
tools:context=".ui.WaitCheckListActivity" >

<TextView
    android:id="@+id/ap_title"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentLeft="true"
    android:layout_alignParentRight="true"
    android:layout_alignParentTop="true"
    android:background="#A4C739"
    android:text="@string/label_wait_check_inquiry"
    android:textAppearance="?android:attr/textAppearanceLarge"
    android:textColor="#ffffff" />

<Button
    android:id="@+id/button_return"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignBottom="@+id/ap_title"
    android:layout_alignParentRight="true"
    android:layout_alignParentTop="true"
    android:background="@drawable/custom_button"
    android:text="@string/button_return"
    android:textAppearance="?android:attr/textAppearanceLarge" />

<TextView
    android:id="@+id/label_part_no"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignBaseline="@+id/input_search_text"
    android:layout_alignParentLeft="true"
    android:layout_below="@+id/ap_title"
    android:paddingLeft="5dp"
    android:text="@string/label_sn_item_no"
    android:textAppearance="?android:attr/textAppearanceLarge"
    android:textColor="#000000" />

<EditText
    android:id="@+id/input_search_text"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentRight="true"
    android:layout_below="@+id/ap_title"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:layout_toRightOf="@+id/label_part_no"
    android:ems="30"
    android:inputType="text"
    android:lines="1"
    android:textColor="@color/blue" />

<ListView
    android:id="@+id/list_item"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_above="@+id/label_status"
    android:layout_alignParentLeft="true"
    android:layout_below="@+id/input_search_text"
    android:layout_marginTop="4dp"
    android:background="#FFFFFF"
    android:choiceMode="singleChoice"
    android:divider="@null"
    android:dividerHeight="4dp"
    android:orientation="vertical" >
</ListView>

<TextView
    android:id="@+id/label_status"
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:layout_alignParentBottom="true"
    android:layout_alignParentLeft="true"
    android:background="#A4C739"
    android:clickable="true"
    android:gravity="center"
    android:textAppearance="?android:attr/textAppearanceLarge" />

</RelativeLayout>